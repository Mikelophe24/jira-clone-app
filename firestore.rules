rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    // Kiểm tra xem user có phải là Owner hoặc Member của Project không
    function hasProjectAccess(projectId) {
      let project = get(/databases/$(database)/documents/projects/$(projectId)).data;
      return isSignedIn() && (
        project.ownerId == request.auth.uid || 
        request.auth.uid in project.members
      );
    }
    // --- COLLECTIONS ---
    // 1. Users: Cho phép xem mọi profile, nhưng chỉ chỉnh sửa profile của chính mình
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isOwner(userId);
    }
    // 2. Projects: Quản lý quyền truy cập dự án
    match /projects/{projectId} {
      // Chỉ owner hoặc member mới được xem project
      allow read: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid || 
        request.auth.uid in resource.data.members
      );
      
      // Bất kỳ ai login cũng có thể tạo project mới (họ sẽ thành owner)
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // Chỉ owner mới có quyền cập nhật hoặc xóa project
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }
    // 3. Tasks: Ràng buộc chặt chẽ với dự án
    match /tasks/{taskId} {
      // Quy chuẩn: Nếu task có projectId, phải kiểm tra quyền trong project đó
      allow read: if isSignedIn() && (
        !('projectId' in resource.data) || hasProjectAccess(resource.data.projectId)
      );
      
      // Khi tạo task: Phải gán vào dự án mà mình có quyền member
      allow create: if isSignedIn() && (
        !('projectId' in request.resource.data) || hasProjectAccess(request.resource.data.projectId)
      );
      
      // Khi sửa/xóa task: Phải là member của dự án đó
      allow update, delete: if isSignedIn() && (
        !('projectId' in resource.data) || hasProjectAccess(resource.data.projectId)
      );
      // 4. Comments (Sub-collection bên trong Task)
      // Khớp với Service: collection(this.fireStore, `tasks/${taskId}/comments`)
      match /comments/{commentId} {
        // Chỉ member của project chứa task này mới được xem/viết comment
        allow read: if isSignedIn() && hasProjectAccess(get(/databases/$(database)/documents/tasks/$(taskId)).data.projectId);
        
        allow create: if isSignedIn() && 
          request.resource.data.authorId == request.auth.uid &&
          hasProjectAccess(get(/databases/$(database)/documents/tasks/$(taskId)).data.projectId);
        
        // Chỉ tác giả comment mới được sửa/xóa
        allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
      }
    }
  }
}